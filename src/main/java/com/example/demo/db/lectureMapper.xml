<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lecture">
    
 	<!-- 강의 전체목록 반환 (기본권한) -->
 	<select id="findAllLecture" resultType="lectureVO">
 		select lecNO, lecName, lecContent, lecStatus, lecDate, lecAddr, lecturer, lecApp, lecPhone, lecPrice, lecFile, lecSysdate from lecture order by lecDate
 	</select>
 	
 	<!-- 강의 전체목록 반환 (회원권한) -->
 	<select id="findAllLectureLogin" resultType="lectureVO">
 		select lecNO, lecName, lecContent, lecStatus, lecDate, lecAddr, lecturer, lecApp, lecPhone, lecPrice, lecFile, lecSysdate from lecture  where id = #{id} order by lecDate
 	</select>
 	
 	<select id="findByNoLecture" resultType="lectureVO">
	 	select * from lecture where lecno = #{lecno}
    </select>
 	
 	<insert id="insertLecture" parameterType="lectureVO">
 		insert into lecture values (seq_lecture.nextval,#{lecName},#{leccontent},#{lecStatus},to_date(#{lecdate},'yyyy-mm-dd'),#{lecaddr},#{lecturer},#{lecapp},#{lecphone},#{lecprice},#{lecfile},sysdate)
 	</insert>
 	
